<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Register PartsCO</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </head>
  <body class="text-center">

<main class="form-signin text-center shadow-lg p-3 mb-5">
  <form class="row g-3" id="formLogin" action="/register" method="POST">
    <h1 class="h3 mb-3 fw-normal">Registrarse en PartsCO</h1>
    
    <div class="position-relative">
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" name="nombre" class="form-control" id="nombre" value="">
      <!-- Mensajes para validación   -->
      <div class="valid-tooltip">¡Campo válido!</div>
      <div class="invalid-tooltip">Debe completar el nombre.</div>
  </div>
  
  <div class="position-relative">
    <label for="apellido" class="form-label">Apellido</label>
    <input type="text" name="apellido" class="form-control" id="apellido" value="">
    <!-- Mensajes para validación   -->
    <div class="valid-tooltip">¡Campo válido!</div>
    <div class="invalid-tooltip">Debe completar el apellido.</div>
  </div>

  <div class="position-relative">
    <label for="email" class="form-label">Email</label>
    <input type="text" name="email" class="form-control" id="email" value="">
    <!-- Mensajes para validación   -->
    <div class="valid-tooltip">¡Campo válido!</div>
    <div class="invalid-tooltip">Debe completar el email.</div>
  </div>

  <div class="position-relative">
    <label for="password" class="form-label">Contraseña</label>
    <input type="password" name="password" class="form-control" id="password" value="">
    <!-- Mensajes para validación   -->
    <div class="valid-tooltip">¡Campo válido!</div>
    <div class="invalid-tooltip">Debe completar la contraseña.</div>
  </div>

  <div class="col-12">
    <button class="w-100 btn btn-primary fw-bold" type="submit">Enviar</button>
  </div>
  </form>
    <br>
    <a href="/login" type="button" class="w-100 btn btn-primary fw-bold">Login</a>
    <br>
    <p class="mt-1 mb-3 text-muted">&copy;Proyecto integrador PartsCO 2022-1</p>
</main>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if(alert){ %>
  <script>
    Swal.fire({
      title: '<%=alertTitle%>',
      text: '<%=alertMessage%>',
      icon: '<%=alertIcon%>',
      showConfirmButton: <%=showConfirmButton%>,
      timer: <%=timer%>
    }).then(()=>{
      window.location = '/<%=ruta%>'
    })
  </script>
<% } %>

  </body>
</html>
