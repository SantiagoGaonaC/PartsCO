      <main class="form-signin card text-center border-dark p-3 mb-5">
          <h1 class="h3 mb-3 fw-normal"><strong>Confirmaci√≥n de la factura</strong></h1>
          <table id="tabla" class="table table-bordered text-center " style="width:100%">
            <TR><TH>ID solicitud/Factura</TH>
              <TD><%= results.idsolicitud  %></TD></TR>
