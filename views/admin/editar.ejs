<%- include("./head.ejs") %>
    <meta name="description" content="">
    <title>Editar partes</title>
  </head>

  <body class="text-center">
    <% if (articulos) { %>
    <div>
      <div class="position-absolute top-50 start-50 translate-middle">
        <main class="form-signin text-center shadow-lg p-2 mb-5">
          <form class="row g-3" id="formLogin" action="/actualizarproductos" method="POST">
            <h1 class="h3 mb-3 fw-normal"><strong>Editar partes PartsCO</strong></h1>

            <input id="idarticulo" name="idarticulo" value="<%= articulos.idarticulo %>" hidden>

            <div class="row">
              <div class="col-md-6 mb-4">
  
                <div class="position-relative">
                  <label for="nombre" class="form-label">Nombre</label>
                  <input type="text" name="nombre" class="form-control" id="nombre" value="<%= articulos.nombre  %>">
              </div>
  
              </div>
              <div class="col-md-6 mb-4">
                <div class="position-relative">
                    <label for="email" class="form-label">Stock</label>
                    <input type="" name="stock" class="form-control" id="stock" value="<%= articulos.stock %>">
                  </div>
              </div>
            </div>
    
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="position-relative">
                    <label for="email" class="form-label">Valor</label>
                    <input type="number" name="valor" class="form-control" id="valor" value="<%= articulos.valor  %>">
                  </div>

              </div>
  
              <div class="col-md-6 mb-4">
                <div class="position-relative">
                  <label for="rol" class="form-label">Estado</label>
                  <select class="form-select" name="estado" id="estado" tabindex="2">
                      <option <%= articulos.estado=='disponible' ? "selected" : '' %> value="disponible">Disponible</option>
                      <option <%= articulos.estado=='no disponible' ? "selected" : '' %> value="no disponible">No disponible</option>
                    </select>
                </div>
              </div>
            </div>
            <div class="position-relative">
              <label for="email" class="form-label">Categoria</label>
              <input type="text" name="categoria" class="form-control" id="categoria" value="<%= articulos.categoria %>">
            </div>
            <div class="position-relative">
                <label for="email" class="form-label">Descripci√≥n</label>
                <input type="text" name="descripcion" class="form-control" id="descripcion" value="<%= articulos.descripcion %>">
              </div>

          <div class="col-12">
            <button class="w-100 btn btn-primary fw-bold" type="submit">Enviar</button>
          </div>
          </form>
            <br>
            <a href="/productos" type="button" class="w-100 btn btn-primary fw-bold">Panel Admin</a>
            <br>
            <p class="mt-1 mb-3 text-muted">&copy;Proyecto integrador PartsCO 2022-1</p>
        </main>
      </div>
    
    </div>
    <% } %>
    <% if(alert){ %>
      <script>
        Swal.fire({
          title: '<%=alertTitle%>',
          text: '<%=alertMessage%>',
          icon: '<%=alertIcon%>',
          showConfirmButton: <%=showConfirmButton%>,
          timer: <%=timer%>
        }).then(()=>{
          window.location = '/<%=ruta%>'
        })
      </script>
    <% } %>

  </body>
</html>
